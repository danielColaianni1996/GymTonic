@model IEnumerable<GymTonic.DataBase.Table.Abbonamenti>

@{
    ViewData["Title"] = "Lista Abbonamenti";
    Layout = "_Layout";
}


<div class="card shadow">
    <div class="card-header">
        <h6 class="card-title ">Esercizi</h6>
    </div>
    <div class="card-body">
        <table class="display table-responsive " id="dataTable" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UtenteId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoAbbonamentoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CounterAbbonamenti)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InizioAbbonamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FineAbbonamento)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UtenteId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoAbbonamentoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CounterAbbonamenti)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InizioAbbonamento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FineAbbonamento)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Modifica</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Elimina</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "language": {
                "search": "Ricerca:",
                "paginate": {
                    "first": "Primo",
                    "last": "Ultimo",
                    "next": "Prossimo",
                    "previous": "Precedente"
                },
                "emptyTable": "Nessun risultato visualizzabile",
                "info": "Risultato _START_ di _END_ su _TOTAL_ risultati",
                "lengthMenu": "Visualizza _MENU_ risultati",
            },
            responsive: true
        });
    });
</script>
