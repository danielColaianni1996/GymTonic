@model GymTonic.DataBase.Table.Abbonamenti

@{
    ViewData["Title"] = "Modifica";
    Layout = "_Layout";
    List<SelectListItem> utenti = (List<SelectListItem>) ViewData["listaUtenti"];
    List<SelectListItem> tipoAbbonamenti = (List<SelectListItem>) ViewData["listaAbbonamenti"];
}

    <div class="card shadow">
        <div class="card-header">
            <h6 class="card-title ">Inserisci</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="control-label"> Seleziona un Utente</label>
                    @*<input asp-for="UtenteId" class="form-control" />*@
                    @Html.DropDownListFor(model => model.UtenteId, utenti, new { @class = "form-control" })
                    <span asp-validation-for="UtenteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Seleziona il tipo di abbonamento</label>
                    @*<input asp-for="TipoAbbonamentoId" class="form-control" />*@
                    @Html.DropDownListFor(model => model.TipoAbbonamentoId, tipoAbbonamenti, new { @class = "form-control" })
                    <span asp-validation-for="TipoAbbonamentoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InizioAbbonamento" class="control-label"></label>
                    <input type="date" asp-for="InizioAbbonamento" value="@Model.InizioAbbonamento.ToString("yyyy-MM-dd")" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="yyyy-mm-dd">
                    <span asp-validation-for="InizioAbbonamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FineAbbonamento" class="control-label"></label>
                    <input type="date" asp-for="FineAbbonamento" value="@Model.FineAbbonamento.ToString("yyyy-MM-dd")" class="form-control" data-provide="datepicker" data-date-autoclose="true" data-date-format="yyyy-mm-dd">
                    <span asp-validation-for="FineAbbonamento" class="text-danger"></span>
                </div>
                <div class="form-check-inline">
                    <label class="control-label">Vuoi renderlo attivo?</label>
                    <input asp-for="IsActive" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salva" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index" class=" btn btn-success">Torna alla lista</a>
            </div>
        </div>
        
    </div>



