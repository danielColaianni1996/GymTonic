@model IEnumerable<AbbonamentiViewModel.IndexViewModel>

<div id="tabellaScadenze" class="card shadow ">
    <div class="card-header">
        <h6 class="card-title ">Abbonamenti in scadenza</h6>
    </div>
    <div class="card-body ">
        <table class="display tabella table-responsive" id="dataTable" width="100%">
            <thead>
                <tr>
                    <th>
                        Utente
                    </th>
                    <th>
                        Scheda
                    </th>
                    <th>
                        Data d'inizio
                    </th>
                    <th>
                        Data fine
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Utente
                        </td>
                        <td>
                            @item.Abbonamenti
                        </td>
                        <td>
                            @item.DataInizio
                        </td>
                        <td>
                            @item.DataFine
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Abbonamenti" asp-route-id="@item.Id">Modifica</a>
                        </td>
                        @*<td>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="SchedePersonali" class="btn btn-success">Dettaglio scheda</a>
                        </td>*@
                        <td>
                            <button id="SendPromemoria" data-ID="@item.Id" class=" btn btn-primary">Invia un promemoria all'utente</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
