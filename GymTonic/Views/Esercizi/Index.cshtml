@model IEnumerable<GymTonic.DataBase.Table.Esercizi>

@{
    ViewData["Title"] = "Lista esercizi";
}


<div class="card shadow">
    <div class="card-header">
        <h6 class="card-title ">Esercizi</h6>
    </div>
    <div class="card-body">
        <table class="display " id="dataTable" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeEsercizio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descrizione)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsRiscaldamento)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeEsercizio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descrizione)
                    </td>
                    <td>
                        @item.IsRiscaldamento
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID"  class="btn btn-primary">Modifica</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID"class="btn btn-danger">Elimina</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "language": {
                "search": "Ricerca:",
                "paginate": {
                    "first": "Primo",
                    "last": "Ultimo",
                    "next": "Prossimo",
                    "previous": "Precedente"
                },
                "emptyTable": "Nessun risultato visualizzabile",
                "info": "Risultato _START_ di _END_ su _TOTAL_ risultati",
                "lengthMenu": "Visualizza _MENU_ risultati",
            },
            responsive: true
        });
    });
</script>